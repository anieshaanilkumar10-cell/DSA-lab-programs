#include<stdio.h>
#include<stdlib.h>
#define SIZE 5
struct queue{
int f,r;
int data[SIZE];
};
typedef struct queue QUEUE;
void enqueue(QUEUE *q,int item)
{

    if(q->r==SIZE-1)
    {
        printf("\n Queue is full\n");
        }
        else
        {
            q->r++;
            q->data[q->r]=item;
            if(q->f==-1)
                q->f=0;
            printf("\n inserted %d into th queue \n",item);
        }
}
void dequeue(QUEUE *q)
{
    if(q->f==-1)
    {
        printf("\n queue is empty\n");
    }

        else

            {
            printf("\n deleted element is %d\n",q->data[q->f]); }
            if(q->f==q->r)
            {
                q->f=-1;
                q->r=-1;
            }
            else
            {
                q->f++;
            }

    }

    void display(QUEUE q)
    {
        int i;
        if(q.f==-1)
        {
            printf("\n Queue is empty");
        }
        else{
            printf("\n queue contents are:");
            for(i=q.f;i<=q.r;i++)

                printf("%d\t",q.data[i]);
            printf("\n");
        }
    }
    int main()
    {
        int item,ch;
        QUEUE q;
        q.f=-1;
        q.r=-1;
        while(1)
        {
            printf("\n1.Enqueue");
             printf("\n2.Dequeue");
              printf("\n3.Display");
               printf("\n4.Exit");
               printf("\n read your choice:");
               scanf("%d",&ch);
               switch(ch)
               {
                   case 1:printf("\n Enter element to insert:");
                   scanf("%d",&item);
                   enqueue(&q,item);
                   break;
                   case 2:dequeue(&q);
                   break;
                   case 3:display(q);
                   break;
                   default:printf("\nExit");
                   exit(0);
               }

        }
    
        return 0;
    }
